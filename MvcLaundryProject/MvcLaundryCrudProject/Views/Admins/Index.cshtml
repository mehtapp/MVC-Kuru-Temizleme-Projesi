@model IEnumerable<MvcLaundryCrudProject.Models.Admins>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h2 class="h3 mb-2 text-gray-800">Adminler Tablosu</h2>
    <p class="mb-4">
        Mevcut adminlerin listelendiği tablodur. Güncelleme silme gibi işlemleri tablo üzerinden yapabilirsin.</a>.
    </p>


    @Html.ActionLink("Admin Ekle", "Create" ,null, new { @class= "btn btn-primary"}) <br /><br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Adminler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Kullanıcı Adı
                            </th>
                            <th>
                                Şifre
                            </th>
                            <th>Güncelle Sil İşlemleri</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.userName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.password)
                                </td>
                                <td class="pl-4">
                                    @Html.ActionLink("Güncelle", "Edit", new { id = item.AdminId }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.AdminId }, new { @class = "btn btn-primary" })

                                </td>
                            </tr>
                        }
                        </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
