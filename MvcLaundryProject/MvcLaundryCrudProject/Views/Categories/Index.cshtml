@model IEnumerable<MvcLaundryCrudProject.Models.Categories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h2 class="h3 mb-2 text-gray-800">Kategoriler Tablosu</h2>
    <p class="mb-4">
        Mevcut kategorilerin listelendiği tablodur. Güncelleme silme gibi işlemleri tablo üzerinden yapabilirsin.</a>.
    </p>

    @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
    <br />
    <br />

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kategoriler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Kategori Adı
                            </th>
                            <th>
                                Ücret
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.ActionLink("Güncelle", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Sil", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
