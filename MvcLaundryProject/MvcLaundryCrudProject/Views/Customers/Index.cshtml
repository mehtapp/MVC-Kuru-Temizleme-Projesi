@model IEnumerable<MvcLaundryCrudProject.Models.Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h2 class="h3 mb-2 text-gray-800">Müşteriler Tablosu</h2>
    <p class="mb-4">
        Mevcut müşterilerin listelendiği tablodur. Güncelleme silme gibi işlemleri tablo üzerinden yapabilirsin.</a>.
    </p>

    <!-- DataTales Example -->
    @Html.ActionLink("Yeni Müşteri Ekle", "Create", null, new { @class = "btn btn-primary" })<br /><br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Müşteriler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Ad Soyad
                            </th>
                            <th>
                                Mail
                            </th>
                            <th>
                                Adres
                            </th>
                            <th>
                                Telefon
                            </th>
                            <th>
                                Düzenle - Sil
                            </th>

                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameSurname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.CustomerId }, new { @class = "btn btn-primary" }) |   @*guncelledik*@

                                    @Html.ActionLink("Sil", "Delete", new { id = item.CustomerId }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
